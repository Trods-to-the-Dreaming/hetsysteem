{{#block "title"}}Beurt{{/block}}

<script>
	const character = {{{json character}}};
	const steps = {{{json steps}}};
	const firstStep = {{firstStep}};
	const lastStep = {{lastStep}};
	const activeStep = {{activeStep}};
	
	localStorage.setItem('character', JSON.stringify(character));
	localStorage.setItem('steps', JSON.stringify(steps));
	localStorage.setItem('firstStep', firstStep);
	localStorage.setItem('lastStep', lastStep);
	localStorage.setItem('activeStep', activeStep);
	
	localStorage.setItem('begin', true);
	
	window.location.replace(steps[activeStep].url);
</script>