{{#block "title"}}Beurt{{/block}}

<script>
	const stepsData = {{{json stepsData}}};
	
	const steps = {{{json steps}}};
	const firstStep = {{firstStep}};
	const lastStep = {{lastStep}};
	const activeStep = {{activeStep}};

	stepsData.forEach((stepData, index) => {
		localStorage.setItem(`turn.step.${index}`, JSON.stringify(stepData));
	});
	
	localStorage.setItem('turn.steps', JSON.stringify(steps));
	localStorage.setItem('turn.firstStep', firstStep);
	localStorage.setItem('turn.lastStep', lastStep);
	localStorage.setItem('turn.activeStep', activeStep);
	
	localStorage.setItem('turn.begin', true);
	
	window.location.replace(steps[activeStep].url);
</script>